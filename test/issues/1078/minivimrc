set nocompatible
let &rtp = '../../..,' . &rtp
let &rtp .= ',../../../after'
filetype plugin indent on
syntax enable

nnoremap q :qall!<cr>

let g:tex_flavor = 'latex'
let g:vimtex_indent_conditionals = {
      \ 'open': '\\if\%(num\|false\)\?\>',
      \ 'else': '\\else\>',
      \ 'close': '\\fi\>',
      \}

silent edit minimal.tex

silent normal! gg=G
for s:line in getline(0,'$')
  echo s:line
endfor
echo ''
quitall!
