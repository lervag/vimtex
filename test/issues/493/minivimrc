set nocompatible
let &rtp = '../../..,' . &rtp
let &rtp .= ',../../../after'
filetype plugin indent on
syntax enable

nnoremap q :qall!<cr>

set noshowmode
set shortmess=aoOtT
silent! set shortmess+=cI
silent! set shortmess+=F

set completeopt+=noselect
set completeopt+=menuone

let g:tex_flavor = 'latex'

silent edit test.tex

normal! ivimtex
normal! i(vim)
startinsert
