set nocompatible
let &rtp = '../../..,' . &rtp
let &rtp .= ',../../../after'
filetype plugin indent on
syntax enable

nnoremap q :qall!<cr>

let g:tex_flavor = 'latex'

augroup Testing
  autocmd!
  autocmd User VimtexEventQuit echom 'Quitting' b:vimtex.name | sleep 200m
augroup END

if has('vim_starting')
  silent split minimal.tex
  echo '  Expecting zero prints on :bdelete'
  bdelete
  echo '  Expecting single print on :2bwipeout'
  2bwipeout
  echo '  Expecting zero prints on :quit'
  quit
endif
