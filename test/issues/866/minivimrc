set nocompatible
let &rtp = '../../..,' . &rtp
let &rtp .= ',../../../after'
filetype plugin indent on
syntax enable

let g:tex_flavor = 'latex'
let g:vimtex_echo_ignore_wait = 1

silent edit first.tex
saveas second.tex

redir => s:info
silent! VimtexInfo
redir END

echon "\n"
for s:line in split(s:info, '\n')
  echo s:line
endfor
echo ''

call delete('second.tex')
quit
